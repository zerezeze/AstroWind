---
// Fazendo a requisição para obter os posts
const response = await fetch(
  'https://www.globalization-partners.com/wp-json/wp/v2/posts?_fields=id,title,slug,excerpt,yoast_head_json&per_page=10'
);
const posts = await response.json();

// Log dos dados dos posts
console.log('Posts data:', posts);
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Posts</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        margin-bottom: 20px;
      }
      a {
        color: #0066cc;
        text-decoration: none;
        font-weight: bold;
      }
      a:hover {
        text-decoration: underline;
      }
      .excerpt {
        margin-top: 5px;
        font-size: 0.9em;
        color: #666;
      }
    </style>
  </head>
  <body>
    <h1>Lista de Posts</h1>
    <ul>
      {
        posts.map((post) => (
          <li key={post.id}>
            <a href={`/test/${post.slug}`}>{post.title.rendered}</a>
          </li>
        ))
      }
    </ul>

    <script define:vars={{ posts }}>
      console.log('All posts (client-side):', posts);
    </script>
  </body>
</html>
